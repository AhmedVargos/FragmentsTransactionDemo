<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="fallenleafapps.com.fragmentslabadvanced.activities.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/fragment_container"
        android:layout_weight="5"
        android:layout_margin="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btn_add_fragment1"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Add Fragment 1"
        android:textAllCaps="false"
        style="@style/TextAppearance.AppCompat.Medium"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btn_add_fragment2"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Add Fragment 2"
        android:textAllCaps="false"
        style="@style/TextAppearance.AppCompat.Medium"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btn_add_fragment3"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Add Fragment 3"
        android:textAllCaps="false"
        style="@style/TextAppearance.AppCompat.Medium"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btn_replace_fragment4"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Replace With Fragment 4"
        android:textAllCaps="false"
        style="@style/TextAppearance.AppCompat.Medium"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btn_remove_fragment"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Remove last Fragment"
        android:textAllCaps="false"
        style="@style/TextAppearance.AppCompat.Medium"/>
</LinearLayout>
